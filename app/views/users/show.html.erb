<p id="notice"><%= notice %></p>

<h1>
  <strong><%= @user.name %></strong>  
</h1>

<p>
  <%= @user.email %>
</p>

<br><br>

<% if !@user.worker.nil? %>
  <h3>Duties as a Worker</h3>
  <br>

  <ul>
    <% @user.worker.todos.each do |t| %>
      <li><%= link_to t.task, project_todo_path(t.project.slug, t) %></li>
    <% end if @user.worker %>
  </ul>
<% end %>

<%= link_to 'Edit', user_path(@user) %> |
<% if @user.worker.nil? %> <%= link_to 'Become a Worker', new_user_worker_path(@user) %> | <% end %>
<%= link_to 'Back', users_path %>
